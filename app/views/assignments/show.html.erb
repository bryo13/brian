<h3><%= @assignment.course_name%></h3>

<br>
<table class="table table-bordered table-striped">
<thead>

<tr>
<th>Course Code</th>
<th>Download Link</th>
<th>Semester </th>
<th>Year of Study </th>
</tr>
</thead>

<tbody>
<tr>
<td><%= @assignment.course_code %></td>
<td><%= link_to "Download Link", @assignment.attachment_url %></td>
<td><%= @assignment.semester%> </td>
<td><%= @assignment.year_of_study%> </td>
</tr>

</tbody>
</table>
</br>
<div class="links">
<%= link_to "Back",root_path,class:"btn btn-default"%>

<% if current_user = user_signed_in?%>
|
<%= link_to "Delete",@assignment_path,method: :delete,
 data:{confirm:"Are you sure you want to delete #{@assignment.course_name}"},
 class:"btn btn-danger" %>
 |
 <%= link_to "Edit",edit_assignment_path,class:"btn btn-default"%>
|
 <% end %>

</br>
<h4>Co-ordinators/lecture details :</h4>
<td><p><%= @assignment.user.email%></p></td>
<td><%= @assignment.user.name%></td>
<br>
</div>
